<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header with Status -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Payment Icon -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_payment"
                android:background="@drawable/card_background"
                android:padding="8dp"
                android:layout_marginEnd="12dp" />

            <!-- Amount and Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,000,000 VNĐ"
                    android:textAppearance="@style/TextAppearance.QuanLyTimTro.Title2"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền cọc"
                    android:textAppearance="@style/TextAppearance.QuanLyTimTro.Body2"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Status Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã thanh toán"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/success"
                app:chipCornerRadius="12dp"
                app:chipMinHeight="24dp" />

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán cọc phòng trọ - Phòng 101, Tòa A"
                android:textAppearance="@style/TextAppearance.QuanLyTimTro.Body2"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Payment Method and Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Payment Method -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_payment"
                        android:tint="@color/primary"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvPaymentMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VNPay"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Caption"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <!-- Date -->
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2024 10:30"
                    android:textAppearance="@style/TextAppearance.QuanLyTimTro.Caption"
                    android:textColor="@color/text_hint" />

            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnView"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Xem chi tiết"
                    android:textSize="12sp"
                    style="@style/Button.Secondary"
                    app:icon="@drawable/ic_arrow_back"
                    app:iconSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
