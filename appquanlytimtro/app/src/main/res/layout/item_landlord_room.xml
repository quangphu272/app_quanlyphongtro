<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Room Image -->
        <ImageView
            android:id="@+id/ivRoomImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner_background"
            android:clipToOutline="true"
            android:contentDescription="Room image" />

        <!-- Room Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phòng trọ cao cấp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang hoạt động"
                    android:textSize="10sp"
                    app:chipMinHeight="24dp"
                    style="@style/Widget.Material3.Chip.Assist" />

            </LinearLayout>

            <!-- Address -->
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123 Đường ABC, Phường XYZ, Quận 1, TP.HCM"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Price and Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5,000,000 VNĐ/tháng"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 m²"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/rounded_background_light"
                    android:padding="4dp" />

            </LinearLayout>

            <!-- Room Type and Views -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRoomType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng trọ"
                    android:textSize="10sp"
                    app:chipMinHeight="24dp"
                    style="@style/Widget.Material3.Chip.Suggestion" />

                <TextView
                    android:id="@+id/tvViews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="123 lượt xem"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_background_primary"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit room"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnToggleStatus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle_background_secondary"
                android:src="@drawable/ic_pause"
                android:contentDescription="Toggle status"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_background_red"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete room"
                app:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

