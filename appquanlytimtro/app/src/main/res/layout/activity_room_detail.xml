<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".rooms.RoomDetailActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Chi tiết phòng trọ"
            app:titleTextAppearance="@style/TextAppearance.QuanLyTimTro.Title1"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <!-- Image ViewPager -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Placeholder Image when no images -->
                <LinearLayout
                    android:id="@+id/layoutPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/surface_variant"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_room_placeholder"
                        android:tint="@color/text_hint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa có ảnh"
                        android:textSize="16sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- Image Overlay -->
                <LinearLayout
                    android:id="@+id/layoutImageOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient_background"
                    android:padding="16dp"
                    android:layout_alignParentBottom="true">

                    <!-- Status Badge -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Còn trống"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        app:chipBackgroundColor="@color/success"
                        app:chipCornerRadius="12dp"
                        app:chipMinHeight="24dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <!-- Like Button -->
                    <ImageView
                        android:id="@+id/ivLike"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_favorite_border"
                        android:background="@drawable/card_background"
                        android:padding="6dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="160dp">

            <!-- Room Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRoomInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phòng trọ đẹp"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Headline3"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <!-- Address -->
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123 Đường ABC, Quận 1, TP.HCM"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Body2"
                        android:textColor="@color/text_secondary"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Price -->
                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3,000,000 VNĐ/tháng"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Headline2"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Room Details Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 m²"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            app:chipIcon="@drawable/ic_area"
                            app:chipIconTint="@color/primary"
                            app:chipBackgroundColor="@color/surface_variant"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="32dp"
                            app:chipStrokeWidth="0dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRoomType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Studio"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            app:chipIcon="@drawable/ic_room"
                            app:chipIconTint="@color/primary"
                            app:chipBackgroundColor="@color/surface_variant"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="32dp"
                            app:chipStrokeWidth="0dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_star"
                                android:tint="@color/warning"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/tvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Views Count -->
                    <TextView
                        android:id="@+id/tvViews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150 lượt xem"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Caption"
                        android:textColor="@color/text_hint" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mô tả"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Title2"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phòng trọ đẹp, thoáng mát, gần trung tâm thành phố. Có đầy đủ tiện ích cần thiết cho cuộc sống hiện đại..."
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Body1"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Amenities Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiện ích"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:id="@+id/layoutAmenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical" />

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Rules Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nội quy"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:id="@+id/layoutRules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical" />

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin liên hệ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvContactInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Liên hệ: 0123456789 | email@example.com"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Price Display -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá thuê"
                    android:textAppearance="@style/TextAppearance.QuanLyTimTro.Caption"
                    android:textColor="@color/text_hint" />

                <TextView
                    android:id="@+id/tvBottomPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,000,000 VNĐ/tháng"
                    android:textAppearance="@style/TextAppearance.QuanLyTimTro.Title1"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:text="Hủy"
                    android:textSize="14sp"
                    style="@style/Button.Secondary"
                    app:icon="@drawable/ic_close"
                    app:iconSize="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBook"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Đặt phòng"
                    android:textSize="14sp"
                    style="@style/Button.Primary"
                    app:icon="@drawable/ic_booking"
                    app:iconSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
