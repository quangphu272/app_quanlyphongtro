<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header with Status -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Room Title -->
            <TextView
                android:id="@+id/tvRoomTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phòng trọ đẹp"
                android:textAppearance="@style/TextAppearance.QuanLyTimTro.Title2"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Status Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ xác nhận"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/warning"
                app:chipCornerRadius="12dp"
                app:chipMinHeight="24dp" />

        </LinearLayout>

        <!-- Room Image -->
        <ImageView
            android:id="@+id/ivRoomImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/surface_variant"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivRoomImage">

            <!-- Dates Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Check In -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhận phòng"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Caption"
                        android:textColor="@color/text_hint" />

                    <TextView
                        android:id="@+id/tvCheckIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/01/2024"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Body2"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/divider"
                    android:layout_marginHorizontal="16dp" />

                <!-- Check Out -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trả phòng"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Caption"
                        android:textColor="@color/text_hint" />

                    <TextView
                        android:id="@+id/tvCheckOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31/01/2024"
                        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Body2"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Total Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_payment"
                    android:tint="@color/primary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng tiền"
                    android:textAppearance="@style/TextAppearance.QuanLyTimTro.Body2"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,000,000 VNĐ"
                    android:textAppearance="@style/TextAppearance.QuanLyTimTro.Title2"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Booking Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvBookingDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đặt ngày: 15/12/2023"
                    android:textAppearance="@style/TextAppearance.QuanLyTimTro.Caption"
                    android:textColor="@color/text_hint" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnView"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:text="Xem"
                        android:textSize="12sp"
                        style="@style/Button.Secondary"
                        app:icon="@drawable/ic_arrow_back"
                        app:iconSize="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAction"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Hủy"
                        android:textSize="12sp"
                        style="@style/Button.Danger"
                        app:icon="@drawable/ic_cancel"
                        app:iconSize="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
