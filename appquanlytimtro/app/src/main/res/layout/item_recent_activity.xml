<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Activity Icon -->
    <ImageView
        android:id="@+id/ivActivityIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_booking"
        android:background="@drawable/card_background"
        android:padding="6dp"
        android:layout_marginEnd="12dp" />

    <!-- Activity Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvActivityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người dùng mới đăng ký"
            android:textAppearance="@style/TextAppearance.QuanLyTimTro.Body2"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvActivityDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn B đã đăng ký tài khoản"
            android:textAppearance="@style/TextAppearance.QuanLyTimTro.Caption"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

    <!-- Time -->
    <TextView
        android:id="@+id/tvActivityTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 phút trước"
        android:textAppearance="@style/TextAppearance.QuanLyTimTro.Caption"
        android:textColor="@color/text_hint" />

</LinearLayout>
